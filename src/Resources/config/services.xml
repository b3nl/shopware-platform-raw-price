<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Raw\CustomerPrice\Custom\CustomPriceEntityDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service class="Raw\CustomerPrice\Import\Communication\Command\PriceImport"
                 id="raw.customer_price.import.communication.command.price_import">

            <argument type="service" id="messenger.bus.shopware"/>

            <tag name="console.command"/>
        </service>

        <service class="Raw\CustomerPrice\Import\Communication\Event\ProductPageLoadedEvent"
                 id="raw.customer_price.import.communication.event.product_page_loaded_event">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="customer_price.repository"/>
        </service>

        <service class="Raw\CustomerPrice\Import\Communication\Messenger\Handler\QueuePriceImportHandler"
                 id="raw.customer_price.import.communication.messenger.handler.queue_price_import_handler">

            <argument type="service" id="raw.customer_price.import.business.customer_price_import_facade"/>

            <tag name="messenger.message_handler"/>
        </service>

        <service class="Raw\CustomerPrice\Import\Business\CustomerPriceImportFacade"
                 id="raw.customer_price.import.business.customer_price_import_facade">

            <argument type="service" id="raw.customer_price.import.business.check.price_import_check"/>
        </service>

        <service class="Raw\CustomerPrice\Import\Business\Check\PriceImportCheck"
                 id="raw.customer_price.import.business.check.price_import_check">
        </service>


    </services>
</container>